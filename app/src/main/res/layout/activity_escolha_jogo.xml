<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.telas.EscolhaJogoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conteiner_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/escolha_jogo_banner_inicial"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:contentDescription="Banner inicial"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@color/purple_700" />

        <TextView
            android:id="@+id/escolha_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha o jogo para gerar palpite"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/escolha_jogo_banner_inicial"
            app:layout_constraintEnd_toEndOf="@id/escolha_jogo_banner_inicial"
            app:layout_constraintStart_toStartOf="@id/escolha_jogo_banner_inicial"
            app:layout_constraintTop_toTopOf="@id/escolha_jogo_banner_inicial" />

        <ListView
            android:id="@+id/escolha_jogo_listview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/escolha_jogo_banner_inicial"
            tools:listitem="@layout/item_apostas" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>